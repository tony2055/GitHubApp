<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
            android:text="User Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="@+id/etNome"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etNome" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="nominho" app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="16dp"/>
    <Button
            android:text="PESQUISAR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btPesquisar" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/etNome" app:layout_constraintStart_toStartOf="@+id/etNome"
            app:layout_constraintEnd_toEndOf="@+id/etNome" android:layout_marginEnd="8dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[3]"
            android:id="@+id/ivUsuario" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/btPesquisar"
            app:layout_constraintStart_toStartOf="@+id/btPesquisar" app:layout_constraintEnd_toEndOf="@+id/btPesquisar"
            android:layout_marginEnd="8dp"
    />
    <TextView
            android:text="Nome do usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:id="@+id/tvNomeUsuario" app:layout_constraintStart_toStartOf="@+id/btPesquisar"
            app:layout_constraintEnd_toEndOf="@+id/btPesquisar" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/ivUsuario"/>
</androidx.constraintlayout.widget.ConstraintLayout>